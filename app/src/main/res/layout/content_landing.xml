<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.close_to.test2.Landing"
    tools:showIn="@layout/activity_landing"
    android:background="#47bcc6"
    android:weightSum="1">

    <ImageView

        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />

    <Button
        android:background="#ffffff"
        android:layout_margin="6dp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textColor="#3ba7b0"
        android:text="Bikes Near Me"
        android:onClick="bike"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal" />

    <Button
        android:background="#ffffff"
        android:layout_margin="6dp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textColor="#3ba7b0"
        android:text="Docks Near Me"
        android:onClick="dock"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:background="#ffffff"
        android:layout_margin="6dp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textColor="#3ba7b0"
        android:text="Future Rides"
        android:onClick="future"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal" />

    <ImageView

        android:layout_width="240dp"
        android:layout_height="100dp"
        android:layout_margin="6dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/indegogo" />

</LinearLayout>
